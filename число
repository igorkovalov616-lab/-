using System;

class Program
{
    static void Main()
    {
        Random random = new Random();

        // –ì–µ–Ω–µ—Ä—É—î–º–æ –≤–∏–ø–∞–¥–∫–æ–≤–µ —á–∏—Å–ª–æ –∑ 6 —Ü–∏—Ñ—Ä
        int numberLength = 6;
        string secret = "";
        for (int i = 0; i < numberLength; i++)
            secret += random.Next(0, 10).ToString();

        char[] display = new string('_', numberLength).ToCharArray();
        int attempts = 5;

        Console.WriteLine("=== –ì–†–ê: –í–≥–∞–¥–∞–π —á–∏—Å–ª–æ ===");
        Console.WriteLine($"–Ø –∑–∞–≥–∞–¥–∞–≤ —á–∏—Å–ª–æ –∑ {numberLength} —Ü–∏—Ñ—Ä.");
        Console.WriteLine("–£ –≤–∞—Å —î 5 —Å–ø—Ä–æ–±, —â–æ–± –≤—ñ–¥–≥–∞–¥–∞—Ç–∏ —Ü–∏—Ñ—Ä–∏.");
        Console.WriteLine(new string(display));
        Console.WriteLine();

        while (attempts > 0)
        {
            Console.Write("–í–≤–µ–¥—ñ—Ç—å —Ü–∏—Ñ—Ä—É (0-9): ");
            string input = Console.ReadLine();

            if (string.IsNullOrEmpty(input) || !char.IsDigit(input[0]))
            {
                Console.WriteLine("–í–≤–µ–¥—ñ—Ç—å –æ–¥–Ω—É —Ü–∏—Ñ—Ä—É!");
                continue;
            }

            char guess = input[0];
            bool found = false;

            for (int i = 0; i < numberLength; i++)
            {
                if (secret[i] == guess)
                {
                    display[i] = guess;
                    found = true;
                }
            }

            if (found)
            {
                Console.WriteLine("‚úÖ –Ñ —Ç–∞–∫–∞ —Ü–∏—Ñ—Ä–∞!");
            }
            else
            {
                attempts--;
                Console.WriteLine($"‚ùå –¢–∞–∫–æ—ó —Ü–∏—Ñ—Ä–∏ –Ω–µ–º–∞—î. –ó–∞–ª–∏—à–∏–ª–æ—Å—å —Å–ø—Ä–æ–±: {attempts}");
            }

            Console.WriteLine(new string(display));
            Console.WriteLine();

            // –ü–µ—Ä–µ–≤—ñ—Ä–∫–∞ –Ω–∞ –ø–µ—Ä–µ–º–æ–≥—É
            if (new string(display) == secret)
            {
                Console.WriteLine($"üéâ –í–∏ –≤–≥–∞–¥–∞–ª–∏ —á–∏—Å–ª–æ: {secret}!");
                return;
            }
        }

        Console.WriteLine($"üò¢ –í–∏ –ø—Ä–æ–≥—Ä–∞–ª–∏. –ó–∞–≥–∞–¥–∞–Ω–µ —á–∏—Å–ª–æ –±—É–ª–æ: {secret}");
    }
}
