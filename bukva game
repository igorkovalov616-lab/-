using System;

class Program
{
    static void Main()
    {
        // –ú–∞—Å–∏–≤ —Å–ª—ñ–≤ –¥–ª—è –≥—Ä–∏
        string[] words = { "kitten", "computer", "flower", "planet", "school", "bottle", "holiday" };

        // –Ü–Ω—ñ—Ü—ñ–∞–ª—ñ–∑–∞—Ü—ñ—è –≥–µ–Ω–µ—Ä–∞—Ç–æ—Ä–∞ –≤–∏–ø–∞–¥–∫–æ–≤–∏—Ö —á–∏—Å–µ–ª
        Random random = new Random();
        string word = words[random.Next(words.Length)];
        char[] guessedWord = new string('_', word.Length).ToCharArray();

        int attempts = 5; // –∫—ñ–ª—å–∫—ñ—Å—Ç—å —Å–ø—Ä–æ–±
        bool isGuessed = false;

        Console.WriteLine("üéÆ –ì–†–ê: –í–≥–∞–¥–∞–π —Å–ª–æ–≤–æ!");
        Console.WriteLine($"–°–ª–æ–≤–æ –º–∞—î {word.Length} –±—É–∫–≤: {new string(guessedWord)}");

        while (attempts > 0 && !isGuessed)
        {
            Console.Write("\n–í–≤–µ–¥—ñ—Ç—å –ª—ñ—Ç–µ—Ä—É: ");
            char guess = Char.ToLower(Console.ReadKey().KeyChar);
            Console.WriteLine();

            bool correct = false;

            for (int i = 0; i < word.Length; i++)
            {
                if (word[i] == guess)
                {
                    guessedWord[i] = guess;
                    correct = true;
                }
            }

            if (correct)
            {
                Console.WriteLine($"‚úÖ –Ñ —Ç–∞–∫–∞ –ª—ñ—Ç–µ—Ä–∞! {new string(guessedWord)}");
            }
            else
            {
                attempts--;
                Console.WriteLine($"‚ùå –¢–∞–∫–æ—ó –ª—ñ—Ç–µ—Ä–∏ –Ω–µ–º–∞—î! –ó–∞–ª–∏—à–∏–ª–æ—Å—å —Å–ø—Ä–æ–±: {attempts}");
            }

            if (new string(guessedWord) == word)
            {
                isGuessed = true;
            }
        }

        if (isGuessed)
        {
            Console.WriteLine($"\nüéâ –í—ñ—Ç–∞—î–º–æ! –í–∏ –≤–≥–∞–¥–∞–ª–∏ —Å–ª–æ–≤–æ: {word}");
        }
        else
        {
            Console.WriteLine($"\nüò¢ –í–∏ –ø—Ä–æ–≥—Ä–∞–ª–∏! –ó–∞–≥–∞–¥–∞–Ω–µ —Å–ª–æ–≤–æ: {word}");
        }
    }
}
